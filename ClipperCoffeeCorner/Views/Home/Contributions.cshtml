@{
    ViewData["Title"] = "Contributors";
    Layout = "_CoffeeLayout";
}

@section Styles {
    <style>
        .contributors-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
            padding: 2rem;
        }
        
        .contributors-card {
            background: white;
            border-radius: 15px;
            padding: 3rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            max-width: 600px;
            width: 100%;
            text-align: center;
        }
        
        .contributors-title {
            color: #8B4513;
            font-weight: bold;
            margin-bottom: 2rem;
            font-size: 2.5rem;
        }
        
        .contributor-list {
            list-style: none;
            padding: 0;
            margin: 2rem 0;
        }
        
        .contributor-item {
            padding: 0.75rem 0;
            font-size: 1.1rem;
            color: #555;
            border-bottom: 1px solid #eee;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }
        
        .contributor-item:hover {
            background-color: #f8f9fa;
        }
        
        .contributor-item:last-child {
            border-bottom: none;
        }
        
        .contributor-name {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .contributor-details {
            display: none;
            margin-top: 0.5rem;
            padding: 0.75rem;
            background-color: #f8f9fa;
            border-radius: 8px;
            font-size: 0.9rem;
            color: #666;
            text-align: left;
        }
        
        .contributor-details.show {
            display: block;
        }
        
        .dropdown-arrow {
            transition: transform 0.2s ease;
        }
        
        .dropdown-arrow.rotated {
            transform: rotate(180deg);
        }
        
        .back-link {
            color: #8B4513;
            text-decoration: none;
            font-weight: 500;
            margin-top: 2rem;
            display: inline-block;
        }
        
        .back-link:hover {
            color: #D2691E;
            text-decoration: underline;
        }
    </style>
}

