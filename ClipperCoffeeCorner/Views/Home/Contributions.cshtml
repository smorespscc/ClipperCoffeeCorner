    </div>
</div>

<script>
function toggleDetails(element) {
    const details = element.querySelector('.contributor-details');
    const arrow = element.querySelector('.dropdown-arrow');
    
    if (details.classList.contains('show')) {
        details.classList.remove('show');
        arrow.classList.remove('rotated');
    } else {
        // Close all other open details first
        document.querySelectorAll('.contributor-details.show').forEach(detail => {
            detail.classList.remove('show');
        });
        document.querySelectorAll('.dropdown-arrow.rotated').forEach(arr => {
            arr.classList.remove('rotated');
        });
        
        // Open the clicked one
        details.classList.add('show');
        arrow.classList.add('rotated');
    }
}
</script>